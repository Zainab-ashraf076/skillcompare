// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ─────────────────────────────────────────────
// ENUMS
// ─────────────────────────────────────────────

enum Role {
  USER
  ADMIN
}

enum Level {
  BEGINNER
  INTERMEDIATE
  ADVANCED
  ALL_LEVELS
}

enum CourseStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

// ─────────────────────────────────────────────
// USER
// ─────────────────────────────────────────────

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          Role      @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts          Account[]
  sessions          Session[]
  reviews           Review[]
  wishlists         Wishlist[]
  comparisonHistory ComparisonHistory[]

  @@index([email])
  @@map("users")
}

// ─────────────────────────────────────────────
// AUTH.JS MODELS (required for Prisma adapter)
// ─────────────────────────────────────────────

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ─────────────────────────────────────────────
// PLATFORM
// ─────────────────────────────────────────────

model Platform {
  id          String   @id @default(cuid())
  name        String   @unique
  slug        String   @unique
  logoUrl     String?
  websiteUrl  String?
  description String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  courses Course[]

  @@index([slug])
  @@map("platforms")
}

// ─────────────────────────────────────────────
// CATEGORY
// ─────────────────────────────────────────────

model Category {
  id          String   @id @default(cuid())
  name        String   @unique
  slug        String   @unique
  description String?  @db.Text
  icon        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  courses Course[]

  @@index([slug])
  @@map("categories")
}

// ─────────────────────────────────────────────
// COURSE
// ─────────────────────────────────────────────

model Course {
  id             String      @id @default(cuid())
  title          String
  slug           String      @unique
  description    String      @db.Text
  shortDesc      String?
  imageUrl       String?
  instructor     String?
  language       String      @default("English")
  level          Level       @default(ALL_LEVELS)
  status         CourseStatus @default(DRAFT)
  price          Float        @default(0)
  originalPrice  Float?
  currency       String       @default("USD")
  duration       Int?         // in hours
  lessonsCount   Int?
  hasCertificate Boolean      @default(false)
  hasJobSupport  Boolean      @default(false)
  rating         Float        @default(0)
  reviewCount    Int          @default(0)
  enrollmentCount Int         @default(0)
  url            String?
  syllabus       Json?
  skills         String[]
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  platformId String
  platform   Platform @relation(fields: [platformId], references: [id])

  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])

  reviews           Review[]
  wishlists         Wishlist[]
  comparisonHistory ComparisonHistoryCourse[]

  @@index([slug])
  @@index([status])
  @@index([level])
  @@index([categoryId])
  @@index([platformId])
  @@index([price])
  @@index([rating])
  @@map("courses")
}

// ─────────────────────────────────────────────
// REVIEW
// ─────────────────────────────────────────────

model Review {
  id        String   @id @default(cuid())
  rating    Int      // 1-5
  title     String?
  body      String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  courseId String
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@unique([userId, courseId])
  @@index([courseId])
  @@index([userId])
  @@map("reviews")
}

// ─────────────────────────────────────────────
// WISHLIST
// ─────────────────────────────────────────────

model Wishlist {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  courseId String
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@unique([userId, courseId])
  @@index([userId])
  @@map("wishlists")
}

// ─────────────────────────────────────────────
// COMPARISON HISTORY
// ─────────────────────────────────────────────

model ComparisonHistory {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  courses ComparisonHistoryCourse[]

  @@index([userId])
  @@map("comparison_history")
}

model ComparisonHistoryCourse {
  comparisonHistoryId String
  courseId            String

  comparisonHistory ComparisonHistory @relation(fields: [comparisonHistoryId], references: [id], onDelete: Cascade)
  course            Course            @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@id([comparisonHistoryId, courseId])
  @@map("comparison_history_courses")
}
